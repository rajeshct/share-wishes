<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_5"
    android:layout_marginTop="@dimen/dp_5">


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text_source"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="@dimen/divider_height"
        android:layout_margin="@dimen/dp_5"
        android:background="@color/grey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_source" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/ib_whatsapp_share"
        android:layout_width="@dimen/dp_share_icon_size"
        android:layout_height="@dimen/dp_share_icon_size"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        app:layout_constraintRight_toLeftOf="@+id/ib_facebook_share"
        app:layout_constraintTop_toTopOf="@+id/ib_other_share"
        app:srcCompat="@drawable/ic_whatsapp" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/ib_facebook_share"
        android:layout_width="@dimen/dp_share_icon_size"
        android:layout_height="@dimen/dp_share_icon_size"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        app:layout_constraintRight_toLeftOf="@+id/ib_instagram_share"
        app:layout_constraintTop_toTopOf="@+id/ib_other_share"
        app:srcCompat="@drawable/ic_facebook" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/ib_instagram_share"
        android:layout_width="@dimen/dp_share_icon_size"
        android:layout_height="@dimen/dp_share_icon_size"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        app:layout_constraintRight_toLeftOf="@+id/ib_other_share"
        app:layout_constraintTop_toTopOf="@+id/ib_other_share"
        app:srcCompat="@drawable/ic_instagram" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/ib_other_share"
        android:layout_width="@dimen/dp_share_icon_size"
        android:layout_height="@dimen/dp_share_icon_size"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        app:srcCompat="@drawable/ic_share" />

</android.support.constraint.ConstraintLayout>